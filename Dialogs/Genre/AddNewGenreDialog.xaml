<Window x:Class="SQLLab2.Dialogs.Genre.AddNewGenreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLLab2.Dialogs.Genre"
        mc:Ignorable="d"
        Title="Add Genre" Height="Auto" Width="400">
    <Grid>
        <StackPanel
        Margin="0,40">
            <Label Content="Genre Name:"
               HorizontalAlignment="Center"/>
            <TextBox Text="{Binding GenreName}"
                 Width="150"/>

            <DockPanel Margin="0,50,0,0"
                    LastChildFill="False"
                    HorizontalAlignment="Center">
                <Button Content="OK"
                Width="50"
                Margin="0,0,20,0"
                Command="{Binding UpdateGenreAsyncCommand}"
                Click="CloseDialog"/>
                <Button Content="Cancel"
                Width="50"
                Click="CloseDialog"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
