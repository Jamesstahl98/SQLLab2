<Window x:Class="SQLLab2.Dialogs.EditSelectedTitleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLLab2.Dialogs"
        mc:Ignorable="d"
        Title="EditSelectedTitleDialog" Height="500" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Title:"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <TextBox Width="200"/>

            <Label Content="ISBN13:"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <TextBox Width="200"/>

            <Label Content="Language:"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>
            <TextBox Width="200"/>

            <Label Content="Date published (xxxx-xx-xx):"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <TextBox Width="200"/>

            <Label Content="Author:"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <!--Bind to authors-->
            <ComboBox Width="200"/>

            <Label Content="Price:"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>
            <TextBox Width="200"/>

            <DockPanel Margin="0,50,0,0"
                   LastChildFill="False"
                   HorizontalAlignment="Center">
                <Button Content="OK"
                        Width="50"
                        Margin="0,0,20,0"
                        Click="CloseDialog"/>
                <Button Content="Cancel"
                        Width="50"
                        Click="CloseDialog"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
