<Window x:Class="SQLLab2.Dialogs.EditSelectedAuthorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLLab2.Dialogs"
        mc:Ignorable="d"
        Title="EditSelectedAuthorDialog" Height="380" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="First name:"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <TextBox Width="200"
                 Text="{Binding SelectedAuthor.FirstName}"/>

            <Label Content="Last name:"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <TextBox Width="200"
                 Text="{Binding SelectedAuthor.LastName}"/>

            <Label Content="Birth date:"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <TextBox Width="200"
                 Text="{Binding SelectedAuthor.BirthDate}"/>

            <Label Content="Death date (Leave blank if author is alive):"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>
            <TextBox Width="200"
                 Text="{Binding SelectedAuthor.DeathDate}"/>

            <DockPanel Margin="0,50,0,0"
                   LastChildFill="False"
                   HorizontalAlignment="Center">
                <Button Content="OK"
                    Width="50"
                    Margin="0,0,20,0"
                    Command="{Binding UpdateAuthorCommand}"
                    Click="CloseDialog"/>
                <Button Content="Cancel"
                    Width="50"
                    Click="CloseDialog"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
